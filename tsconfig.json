{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node16",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}

